extends layouts/main-layout.pug

block styles 
	link(rel="stylesheet", href="/css/main.css")

block content
	main
		if prods.length > 0
			.grid
				each product in prods
					article.card.product-item
						header.card__header
							h1.product_title #{product.title}
						.card__image
							img(src="", alt="Image")
						.card-content
							h2.product__price 112
							p.product__desc Hello paragraph
						.card__actions
							button.btn Add To Cart
		else
			h1 No Products
